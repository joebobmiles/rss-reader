services:
    backend:
        build:
            context: ./packages/backend
            dockerfile: ./docker/dev.Dockerfile
        restart: "no"
        volumes:
            - ./packages/backend:/srv/hullabaloo
            - ./node_modules:/srv/hullabaloo/node_modules
        ports:
            - 9229:9229

    frontend:
        build:
            context: ./packages/frontend
            dockerfile: ./docker/dev.Dockerfile
        restart: "no"
        volumes:
            - ./packages/frontend:/srv/hullabaloo
            - ./node_modules:/srv/hullabaloo/node_modules