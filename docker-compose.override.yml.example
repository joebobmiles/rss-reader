services:
    backend:
        build:
            context: ./
            dockerfile: docker/backend/Dockerfile
        restart: "no"
        volumes:
            - .:/srv/hullabaloo
        ports:
            - 9229:9229
        entrypoint: npm run develop
    frontend:
        build:
            context: ./
            dockerfile: docker/frontend/Dockerfile
        volumes:
            - ./src/frontend:/usr/share/nginx/html
        restart: "no"